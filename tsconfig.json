{
  "compilerOptions": {
    "target": "es6",
    "lib": [ "es7", "dom" ],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./staging/transpiled",
    "rootDir": "./"
  },

  "include": [
    "source/**/*.ts",
    "tests/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "examples"
  ]
}